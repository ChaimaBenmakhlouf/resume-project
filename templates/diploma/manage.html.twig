{% extends "base.html.twig" %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="h4">List of diplomas</h1>
                <a href="{{ path("diploma_create") }}" class="btn btn-primary"><i class="fas fa-plus"></i></a>
            </div>
            <table class="table table-striped table-hovered mb-0">
                <thead>
                    <tr>
                        <th class="text-center text-uppercase">Id</th>
                        <th class="text-center text-uppercase">Title</th>
                        <th class="text-center text-uppercase">place</th>
                        <th class="text-center text-uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if app.user %}
                    {% for diploma in app.user.diplomas %}
                    <tr>
                        <td class="text-center align-middle">{{ diploma.id }}</td>
                        <td class="text-center align-middle">{{ diploma.title }}</td>
                        <td class="text-center align-middle">{{ diploma.place }}</td>
                        <td class="text-center align-middle">
                            <a href="{{ path("diploma_update", { id: diploma.id }) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="{{ path("diploma_delete", { id: diploma.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="text-center align-middle">No diplomas</td>
                    </tr>
                    {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}