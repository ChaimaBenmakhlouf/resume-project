{% extends "base.html.twig" %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h4">List of hobbies</h1>
                    <a href="{{ path("hobbie_create") }}" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                </div>
                <table class="table table-striped table-hovered mb-0">
                    <thead>
                        <tr>
                            <th class="text-center text-uppercase">Id</th>
                            <th class="text-center text-uppercase">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if app.user %}
                        {% for hobbie in app.user.hobbies %}
                            <tr>
                                <td class="text-center align-middle">{{ hobbie.id }}</td>
                                <td class="text-center align-middle">{{ hobbie.name }}</td>
                                <td class="text-center align-middle">
                                    <a href="{{ path("hobbie_update", { id: hobbie.id }) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="{{ path("hobbie_delete", { id: hobbie.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center align-middle">No hobbies</td>
                            </tr>
                        {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}