    <div class="card-body">
        {{ form_errors(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.startedAt) }}
        {{ form_row(form.endedAt) }}
        {{ form_row(form.place) }}
        {{ form_row(form.mission_statement) }}
        
        
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a href="{{ path("professionalExperience_manage") }}" class="btn btn-secondary">Return</a>
