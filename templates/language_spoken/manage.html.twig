{% extends "base.html.twig" %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="h4">List of Languages</h1>
                <a href="{{ path("languageSpoken_create") }}" class="btn btn-primary"><i class="fas fa-plus"></i>Create</a>
            </div>
            <table class="table table-striped table-hovered mb-0">
                <thead>
                    <tr>
                        <th class="text-center text-uppercase">Id</th>
                        <th class="text-center text-uppercase">Name</th>
                        <th class="text-center text-uppercase">Level</th>
                        <th class="text-center text-uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if app.user %}
                    {% for languageSpoken in app.user.languageSpokens %}
                    <tr>
                        <td class="text-center align-middle">{{ languageSpoken.id }}</td>
                        <td class="text-center align-middle">{{ languageSpoken.name }}</td>
                        <td class="text-center align-middle">{{ languageSpoken.level }}</td>
                        <td class="text-center align-middle">
                            <a href="{{ path("languageSpoken_update", { id: languageSpoken.id }) }}" class="btn btn-warning"><i class="fas fa-edit"></i>Edit</a>
                            <a href="{{ path("languageSpoken_delete", { id: languageSpoken.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i>Delete</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="text-center align-middle">No Languages</td>
                    </tr>
                    {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}