{% extends "base.html.twig" %}
{% block metaTag %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
{% block body %}
<style>
    
    .block-information {
        background-color: #343946;
        
    }
    .block-information {
        width: 50%;
    }
    
    .container {
        margin: 0;
        padding:0;
        
    }
    html, body {
        height: 100%; 
        width: 100%;
        margin: 0;
        
    }
    .block-experience {
        width: 900px;
        
    }
    
    .col-12 {
        display: flex;
    }
    
    .info-text, .title {
        color: #F5F5F5;
    }
    .row {
        height: 650px;
    }
    
    
    .text {
        font-weight: bold;
        
        
    }
    .contain-title {
        background: #1f232e;
    }
    
    .text {
        color: #01606d;
    }
    
    .title-info {
        color: #04A8B0;
    }
    
</style>
<div class="row">
    <div class="col-12">
        <div class="block-information">
            <div class="contain-title"><h4 class="title">Personal informations</h4></div>
            
            <div id="personnalInformations"></div>
            {% if app.user %}
            {% for personalInformation in app.user.personalInformation %}
            
            <p class="text">Full Name</p>
            <p class="info-text">{{personalInformation.firstname}} {{personalInformation.lastname}}</p>
            
            <p class="text">Address</p>
            <p class="info-text">{{personalInformation.address}}</p>
            <p class="text">Phone Number</p>
            <p class="info-text">{{personalInformation.phoneNumber}}</p>
            <p class="text">Linkedin Link</p>
            <p class="info-text">{{personalInformation.linkedinLink}}</p>
            {% endfor %}
            {% endif %} 
            <div class="contain-title"> <h4 class="title">Languages</h4></div>
            {% if app.user %}
            {% for languageSpoken in app.user.languageSpokens %}
            
            
            <p class="info-text">{{languageSpoken.name}} {{languageSpoken.level}}</p>
            
            {% endfor %}
            {% endif %} 
            <div class="contain-title"><h4 class="title">Hobbies</h4></div>
            {% if app.user %}
            {% for hobbie in app.user.hobbies %}
            <p class="info-text">{{hobbie.name}}</p>
            {% endfor %}
            {% endif %} 
            
        </div>
        
        <div class="contain-professional-informations">
            <div class="block-experience">
                <h4 class="title-info">Professional Experiences</h4>
                <div id="professionalExperiences"></div>
                {% if app.user %}
                
                
                
                {% for professionalExperience in app.user.professionalExperiences %}
                <span class="text-muted">
                    {{ professionalExperience.startedAt| date('Y-m')}} - {{ professionalExperience.endedAt| date('Y-m')}} 
                    
                </span>
                <p>{{professionalExperience.title}} - {{professionalExperience.place}}</p>
                
                
                
                <p>{{professionalExperience.missionStatement}}</p>
                
                {% endfor %}
                
                {% endif %} 
                
                
                <h4 class="title-info">Skills</h4>
                <ul class="list-group" id="skills"></ul>
                {% if app.user %}
                
                
                {% for skill in app.user.skills %}
                
                
                <p>{{skill.name}} - {{skill.level}} / 10 </p>
                
                
                {% endfor %}
                {% endif %} 
            </div>
            
            <h4 class="title-info">Diplomas</h4>
            {% if app.user %}
            {% for diploma in app.user.diplomas %}
            <span class="text-muted">
                {{ diploma.startedAt| date('Y-m')}} -  {{ diploma.endedAt| date('Y-m')}}
                
            </span>
            <p>{{ diploma.title }} - {{ diploma.place }}</p>
            
            
            
            
            {% endfor %}
            {% endif %}
        </div>
        
    </div>
</div>
{% endblock %}
